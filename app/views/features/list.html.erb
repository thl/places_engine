<%= render :partial => "features/top" %>

<% 
	secondary_tabs = [["Home", "#{ActionController::Base.relative_url_root}/"]]
  secondary_tabs << ["Place", feature_path(@feature)] unless @feature.nil?
  secondary_tabs << ["Essays (#{@feature.descriptions.length})", feature_description_path(@feature, @feature.descriptions.first)] if !@feature.nil? && !@feature.descriptions.empty?
	secondary_tabs << ["Related", related_feature_path(@feature)] unless @feature.nil?
	secondary_tabs << [@tab_title, "#RelatedPlaces"] unless @feature.nil?
%>

			<%= un_secondary_tabs secondary_tabs, secondary_tabs.length-1 %>
  
		  <div class="left" id="RelatedPlaces">
				<div class="has-right-margin">
					<h2><%= @title %></h2>
					<ul>
					<% for feature in @features do %>
					  <li class="normal"><%= link_to h(feature.prioritized_name(current_view)), feature_path(feature.fid) %></li>
					<% end %>
					<% if @features.empty? %>
					<p>
					  No associated places were found.
					</p>
					<% end %>
					</ul>
			  </div>
			</div>

<%= javascript_on_load "document.title = 'THL Place Dictionary of Tibet & the Himalayas'" %>

<%= render :partial => "features/bottom" %>