<%= render :partial => "features/top" %>

<% 
	secondary_tabs = [["Home", "#{ActionController::Base.relative_url_root}/"]]
  secondary_tabs << ["Place", feature_path(@feature.fid)] unless @feature.nil?
  secondary_tabs << ["Essays (#{@feature.descriptions.length})", feature_description_path(@feature, @feature.descriptions.first)] if !@feature.nil? && !@feature.descriptions.empty?
	secondary_tabs << ["Related", related_feature_path(@feature)] unless @feature.nil?
	secondary_tabs << [@object_type, "#RelatedPlaces"] unless @feature.nil?
%>

      <%= un_secondary_tabs secondary_tabs, secondary_tabs.length-1 %>
  
      <div class="left" id="RelatedPlaces">
        <div class="has-right-margin has-ajax-pagination">
					<h2>Places Associated with <%= @object_title %></h2>
          <div class="pagination-click-results">
            <%= render :partial => "features/list" %>
          </div>
          <p>
          <%= link_to "#{@object_title} in #{@object_type.humanize.pluralize}", @object_url %>
          </p>
        </div>
			</div>

<%= javascript_on_load "document.title = 'THL Place Dictionary of Tibet & the Himalayas'" %>

<script type="text/javascript">
jQuery(document).ready(function(){

  // Ajaxify the pagination for lists of features
  jQuery('.has-ajax-pagination .pagination a').live('click', function() {
    var this_link = this;
    jQuery.ajax({
      type: 'GET',
      url: this.href,
      success: function(html){
        jQuery(this_link).parents('.pagination-click-results:first').html(html);
      }
    });
    return false;
  });

});
</script>

<%= render :partial => "features/bottom" %>