<p class='description-author'>
	<%= link_to_remote '.', {:url => expand_feature_description_path(feature,d),  :method => 'get'},  { :class => 'descriptionplus_icon' } %>       
	<% if !d.title.blank? %>  
	<%   if !d.authors.empty? %>
		     <span class='title'><%= d.title %></span>
		     <span class='by'><%= ' by ' %></span>
	         <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.screen_name})}" %></span>
	<%   else %>
	         <span class='title'><%= d.title %></span>
	<%   end %>
	<% else %>     
	<%   if !d.authors.empty? %>
	         <span class='title'>Description</span>
	         <span class='by'><%= ' by ' %></span>
		     <span class='content_by'><%= "#{ join_with_and(d.authors.collect{|a| a.screen_name})}" %></span>
	<%   end %>
	<% end %>
	<span class='last_updated'>(<%= "#{h(d.updated_at.to_date.to_formatted_s(:long))}" %>)...</span>
	<%= time_units_for d %>
</p>
