<% if @feature.descriptions.length > 0 %>
	<p>
<%=   ts :view, :what => t(:other, :what => Description.human_name(:count => :many)) %>:
		<% description_options = @feature.descriptions.collect{|desc|
				[strip_tags(description_simple_title(desc)), feature_description_url(@feature.fid, desc)]
			}.sort %>
		<%= select_tag :description_menu, options_for_select(description_options, feature_description_url(@feature.fid, @description.id)), :onchange => "window.location = jQuery(this).val()" %>
	</p>
<% end %>
<div id="descriptions_div">
	<h2 class="description-title">
		<%= description_title(@description).s %>
	</h2>
	<% unless @description.source_url.blank? %>
	<% source_url = @description.source_url =~ /^\// ? "#{thl_url}#{@description.source_url}" : @description.source_url %>
	<p class="view-essay-in-publication">
		<%= link_to ts(:in, :what => t('see.record', :what => t('this.record', :what => Description.human_name)), :where => t(:its_original_publication)), source_url %>
	</p>
	<% end %>
	<%= note_popup_link_for(@description) %>
	<div>
		<%= @description.content %>
	</div>
</div>