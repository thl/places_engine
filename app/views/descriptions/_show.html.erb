<% if feature.descriptions.length > 0 %>
	<p>
		View other essays:
		<% description_options = feature.descriptions.collect{|desc|
				[strip_tags(description_name(desc)), feature_description_url(feature.id, desc.id)]
			}.sort %>
		<%= select_tag :description_menu, options_for_select(description_options, feature_description_url(feature.id, d.id)), :onchange => "ThlTabs.setTabUrlAndLoadByCode('essays', $(this).val());NodeMenu.hideMenu()" %>
	</p>
<% end %>
<div id="descriptions_div">
	<p class='description-author'>
		<%= description_name(d).s %>
	</p>
	<%= note_popup_link_for(d) %>
	<div>
		<%= d.content %>
	</div>
</div>