<%
add_breadcrumb_item features_link
add_breadcrumb_item feature_link(@parent_object)
add_breadcrumb_item feature_relations_link(@parent_object)
add_breadcrumb_item "new relationship to #{feature_label(@object.parent_node)}"
%>

<% form_for :feature_relation, @object, :url=>admin_feature_feature_relations_path(@object.child_node) do |f| %>
	<%= render :partial=>'form_fields', :locals=>{:f=>f,:object=>@object} %>
	<%= link_to('Cancel',
		@parent_object.nil? ? admin_feature_relation_path(@object) : admin_feature_feature_relations_path(@parent_object)
	) %> | <%= submit_tag 'Create' %>
<% end %>