<h1><%= ts 'list.ing.records', :what => Person.human_name(:count => :many).titleize %></h1>
<table border="1" class="normal">
  <tr>
    <th><%= Person.human_attribute_name(:fullname).s %></th>
    <th><%= User.human_attribute_name(:login).s %></th>
  </tr>
<% for person in @people %>
  <tr>
    <td>
<%=   link_to h(person.fullname).s, edit_admin_person_path(person) %>
	</td>
<%  user = person.user
    if !user.nil? %>
      <td>
<%=     link_to(h(user.login), edit_admin_person_user_path(person)) %>
      </td>
<%  else %>
      <td colspan="2"><%= link_to ts('new.record', :what => User.human_name), new_admin_person_user_path(person) %></td>
<%  end %>
  </tr>
<% end %>
</table>
<p>&nbsp;<br/>
<%= link_to ts('new.record', :what => Person.human_name), new_admin_person_path %>
</p>