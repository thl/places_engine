<%= render :partial => "breadcrumbs" %>
<% add_breadcrumb_item @object.to_s %>
<fieldset>
  <legend><%= ts :for, :what => Note.human_name.titleize.s, :whom => "#{@object.notable}'s #{@object.association_type_name}" %> <%= edit_item_link @object %> <%= delete_item_link @object %></legend>
  <div class="row">
    <label><%= ts :title %></label>
    <span><%= def_if_blank @object, :title %></span>
  </div>
  <div class="row">
    <label><%= Note.human_name.titleize.s %></label>
    <span><%= def_if_blank @object, :content %></span>
  </div>
  <div class="row">
    <label><%= Note.human_attribute_name(:is_public).s %>: </label> <span><%= @object.is_public? ? ts(:affirmation) : ts(:negation) %></span>
  </div>	
  <div class="row">
    <table>
      <tr>
        <td valign="top"><label><%= ts :author, :count => :many %></label></td>
        <td><span><%= @object.authors.blank? ? "-" : @object.authors.collect{|a| a.fullname }.join("<br />") %></span></td>
      </tr>
    </table>
  </div>
</fieldset>