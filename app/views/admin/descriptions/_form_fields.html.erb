<%= tagged_tinymce_script %>
<style type="text/css">
input[type=text] {
	width:35em;
	padding:.1em;
	display: inline-block;
	border:none; 
	padding:5px; 
	font:normal normal normal verdana, arial, sans-serif;
	font-size:100%;
	background:#FFFFFF none repeat scroll 0 0;
	border:1px solid #CCCCCC;
}
</style>
<%= error_messages_for :description %>
<p><b><%= f.label(:title).s %></b><br/>
  <em><%= ts 'snippet.title' %></em>
  <div class="row">
<%= f.text_field(:title, :class => :text) %>
  </div><br/>
</p>
<p>
  <b><%= f.label(:content, Description.human_name.s) %></b><br/>
  <div class="row">
<%= f.text_area :content, :rows => 16, :cols => 65, :class => 'mceEditor' %>
  </div>
<p><%= link_to_remote ts('add.record', :what => t('new.record', :what => t(:author))), :url => add_author_admin_feature_descriptions_path(@object.feature), :update => 'update_div', :position => 'before', :method => 'get' %></p>
<div id="authors_div">
<% for author in @object.authors %>
<%=  render :partial => 'authors_selector', :locals => {:selected => author.id} %>
<% end %>
</div>    
<div id="is_primary_div">
<%= f.check_box :is_primary %> 
<%= f.label(:is_primary).s %>
</div>
<div id="update_div"/>