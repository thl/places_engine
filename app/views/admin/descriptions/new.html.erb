<%
add_breadcrumb_item features_link
if parent_object
	add_breadcrumb_item feature_link(parent_object)
	add_breadcrumb_item feature_descriptions_link(@object.feature)
	add_breadcrumb_item 'new'
end
%>

<div>
<h1>Creating a New Essay for Feature: <%= parent_object %></h1>
</div>
<br class="clear"/>
<% form_for :description, object, :url=>admin_feature_descriptions_path(parent_object), :html=>{} do |f| %>
	<%= f.hidden_field :feature_id, :value=>params[:feature_id] %>
	<%= render :partial=>'form_fields', :locals=>{:f=>f, :object=>object} %>
	
	<% #Make the cancel link go back to the selected feature's descriptions if it exists %>
	<%= link_to('Cancel',
		(parent_object ? admin_feature_descriptions_path(parent_object) : admin_descriptions_path)
	)%>
	
	| <%= submit_tag 'Create', :class=>'submit' %>
<% end %>
