<%= render :partial => 'breadcrumbs' %>
<%  add_breadcrumb_item @object.id %>
<fieldset>	
  <legend><%= ts :for, :what => Citation.human_name.titleize.s, :whom => @object.citable_type.titleize %> <%= edit_item_link @object %> <%= delete_item_link @object %></legend>
  <div class="row">
    <label><%= Citation.human_attribute_name(:info_source_id).s %></label>
    <span><%= def_if_blank @object, :info_source, :prioritized_title %></span>
  </div>	
  <div class="row">
    <label><%= Page.human_name(:count => :many).titleize.s %></label>
    <span><%= @object.pages.collect{|p| "#{p.to_s} #{edit_item_link edit_admin_citation_page_path(@object, p)} #{delete_item_link admin_citation_page_path(@object, p)}"}.join(', ') %></span>
  </div>
  <div class="row">
    <label><%= Note.human_name(:count => :many).titleize.s %></label>
    <span><%= def_if_blank @object, :notes %></span>
  </div>
  <div class="row">
<%=	new_item_link(new_admin_citation_page_path(@object), ts('add.record', :what => t(:referenced, :what => Page.human_name(:count => :many)))) %>
  </div>
</fieldset>