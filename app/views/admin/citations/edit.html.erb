<%
if parent_type.to_s =~ /feature/
	add_breadcrumb_item features_link
end
if parent_type==:feature
	add_breadcrumb_item feature_link(@object.citable)
end

if parent_type==:feature_object_type
	add_breadcrumb_item feature_link(@object.citable.feature)
	add_breadcrumb_item link_to('feature object types', admin_feature_feature_object_types_path(@object.citable.feature))
	add_breadcrumb_item link_to(@parent_object, admin_feature_object_type_path(@parent_object))
end

if parent_type==:feature_geo_code
	# @parent_object is FeatureGeoCode
	add_breadcrumb_item feature_link(@parent_object.feature)
	add_breadcrumb_item link_to('feature geo codes', admin_feature_feature_geo_codes_path(@parent_object.feature))
	add_breadcrumb_item link_to(@parent_object, admin_feature_geo_code_path(@parent_object))
end

if parent_type==:feature_relation
	add_breadcrumb_item feature_link(@object.citable.child_node)
	add_breadcrumb_item feature_relations_link(@object.citable.child_node)
	add_breadcrumb_item feature_relation_role_label(@object.citable.child_node, @object.citable, :use_first=>false)
end
if parent_type==:feature_name
	add_breadcrumb_item feature_link(@object.citable.feature)
	add_breadcrumb_item feature_names_link(@object.citable.feature)
	add_breadcrumb_item link_to(@object.citable.name, admin_feature_name_path(@object.citable))
end
if parent_type==:feature_name_relation
	add_breadcrumb_item feature_link(@parent_object.child_node.feature)
	add_breadcrumb_item feature_names_link(@parent_object.child_node.feature)
	add_breadcrumb_item link_to(@parent_object.child_node.name, admin_feature_name_path(@parent_object.child_node))
	add_breadcrumb_item link_to('relations', admin_feature_name_feature_name_relations_path(@parent_object.child_node))
	add_breadcrumb_item link_to(@parent_object.id, admin_feature_name_relation_path(@parent_object))  
end

add_breadcrumb_item link_to('citations', collection_path)
add_breadcrumb_item link_to(@object.id, object_path(@object))
add_breadcrumb_item 'edit'
%>

<% form_for :citation, @object, :url=>object_path, :html=>{:method=>:put} do |f| %>
	<%= render :partial=>'form_fields', :locals=>{:f=>f,:object=>@object} %>
	<%= link_to 'Cancel', collection_path %> | <%= submit_tag 'Update' %>
<% end %>