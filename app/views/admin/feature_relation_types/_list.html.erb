<%
list = list || []
%>

<% if list.empty? %>
	<%= empty_collection_message %>
<% else %>

<table class="listGrid">
	
	<%= pagination_row :colspan=>3 unless @collection.nil? %>
	
	<tr>
		<th class="listActionsCol"></th>
		<th>Is hierarchical</th>
		<th>Is symmetric</th>
		<th>Label</th>
		<th>Asymmetric Label</th>
		<th>Code</th>
	</tr>
	
	<% list.each do |item| %>
	<tr>
		
		<td class="listActionsCol">
			<%= list_actions_for_item(item,
				:delete_path => admin_feature_relation_type_path(item),
				:edit_path   => edit_admin_feature_relation_type_path(item),
				:view_path   => admin_feature_relation_type_path(item)
			) %>
		</td>
		<td><%= item.is_hierarchical ? 'Yes' : 'No' %></td>		
		<td><%= item.is_symmetric ? 'Yes' : 'No' %></td>
		<td><%= item.label %></td>
		<td><%= item.asymmetric_label unless item.is_symmetric %></td>
		<td><%= item.code %></td>			
	</tr>
	<% end %>
</table>

<% end %>