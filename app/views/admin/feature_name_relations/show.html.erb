<%
add_breadcrumb_item features_link
add_breadcrumb_item feature_link(@object.feature)
add_breadcrumb_item feature_names_link(@object.feature)
add_breadcrumb_item feature_name_link(@object.child_node)
add_breadcrumb_item link_to('relations', admin_feature_name_feature_name_relations_path(@object.child_node))
add_breadcrumb_item @object
%>

<fieldset>
	<legend>General Information <%= edit_item_link @object %></legend>
	<div class="inlineRow">
		<label>Is <%= feature_name_label(@object.child_node) %> translation of <%= feature_name_label(@object.parent_node) %>?</label>
		<div><%= yes_no @object.is_translation %></div>
	</div>
	
	<br/>
	
	<div class="inlineRow">
		<label>Is <%= feature_name_label(@object.child_node) %> a phonetic transcription of <%= feature_name_label(@object.parent_node) %>?</label>
		<div><%= yes_no @object.is_phonetic %></div>
		<div><%= def_if_blank(@object, :phonetic_system, :display_string) { '' } %></div>
	</div>
	
	<br/>
	
	<div class="inlineRow">
		<label>Is <%= feature_name_label(@object.child_node) %> an orthographic transliteration of <%= feature_name_label(@object.parent_node) %>?</label>
		<div><%= yes_no @object.is_orthographic %></div>
		<div><%= def_if_blank(@object, :orthographic_system, :name) { '' } %></div>
	</div>
	
	<br/>
	
	<div class="inlineRow">
		<label>Is <%= feature_name_label(@object.child_node) %> an alt. spelling of <%= feature_name_label(@object.parent_node) %>?</label>
		<div><%= yes_no @object.is_alt_spelling %></div>
		<div><%= def_if_blank(@object, :alt_spelling_system, :name) { '' } %></div>
	</div>
	
	<br/>
	
</fieldset>

