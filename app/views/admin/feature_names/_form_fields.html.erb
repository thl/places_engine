<%= tagged_tinymce_script %>
<%= error_messages_for :feature_name %>
<fieldset>
  <legend><%= ts('information.general') %></legend>
  <div class="row">
<%= f.label :name, Feature.human_name.titleize.s %>
<%= f.text_field :name, :class => :text %>
  </div>
  <div class="row">
<%= f.label :feature_name_type_id, FeatureNameType.human_name.titleize.s %>
<%= f.collection_select :feature_name_type_id, FeatureNameType.all, :id, :to_s, :include_blank=>true %>
  </div>
  <div class="row">
<%= f.label :language_id, Language.human_name.titleize.s %>
<%= f.collection_select :language_id, Language.all.sort{|a,b| a.to_s <=> b.to_s}, :id, :to_s, :include_blank=>true %>
  </div>
  <div class="row">
<%= f.label :writing_system_id, WritingSystem.human_name.titleize.s %>
<%= f.collection_select :writing_system_id, WritingSystem.all.sort{|a,b| a.to_s <=> b.to_s}, :id, :to_s, :include_blank=>true %>
  </div>
  <div class="row">
<%= f.label(:etymology).s %>
  </div>
  <div class="row">
<%= f.text_area :etymology, :rows=>4, :class => 'mceEditor' %>
  </div>
  <div class="row">
<%= f.label(:is_primary_for_romanization).s %>
<%= radio_button(:feature_name, :is_primary_for_romanization, :true ) %><b><%= ts(:affirmation) %></b>&nbsp;&nbsp;
<%= radio_button(:feature_name, :is_primary_for_romanization, :false ) %><b><%= ts(:negation) %></b>
  </div>
</fieldset>